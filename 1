call plug#begin('~/.local/share/nvim/plugged')

Plug 'tmhedberg/SimpylFold'

call plug#end()

" Set color scheme
colorscheme molokai

" Set absolute line numbers
set number
set nu

" Enable long folding
set foldenable
set foldmethod=marker

" Set filetype-specific indentation
filetype plugin indent on

" Fix clipboard
set clipboard+=unnamedplus
